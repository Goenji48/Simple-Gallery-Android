<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SimpleGallery" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SimpleGallery" parent="Base.Theme.SimpleGallery" />

    <style name="Toolbar" parent="Widget.Material3.Toolbar.OnSurface" />

    <style name="DefaultAlertDialogStyle" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="scrimBackground">@color/black</item>
    </style>

</resources>